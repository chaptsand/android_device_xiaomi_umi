ALL_DEFAULT_INSTALLED_MODULES += \
    $(RFS_MDM_ADSP_SYMLINKS) \
    $(RFS_MDM_CDSP_SYMLINKS) \
    $(RFS_MDM_MPSS_SYMLINKS) \
    $(RFS_MDM_SLPI_SYMLINKS)

endif
